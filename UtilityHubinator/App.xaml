<Application x:Class="UtilityHubinator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UtilityHubinator"
             StartupUri="MainWindow.xaml"
             xmlns:vm="clr-namespace:UtilityHubinator.ViewModels"
             xmlns:views="clr-namespace:UtilityHubinator.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:AgeConverterViewModel}">
            <views:AgeConverterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:RandomNumberGeneratorViewModel}">
            <views:RandomNumberGeneratorView/>
        </DataTemplate>
    </Application.Resources>
</Application>
